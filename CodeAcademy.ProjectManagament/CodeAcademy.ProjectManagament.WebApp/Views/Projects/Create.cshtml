
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form method="post" action="~/projects/create">
    Name: <input type="text" name="name" placeholder="Type Project Name" />
    Description: <input type="text" name="description" placeholder="Description?" />
    Hours: <input type="number" name="estimate" placeholder="Hours?" />
    <br />
    <input type="submit" value="Create" />
    <div>
        @ViewBag.Name<br />
        @ViewBag.Description<br />
        @ViewBag.Estimate
    </div>
</form>