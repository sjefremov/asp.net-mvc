@model IEnumerable<EntityFramework.WebApp.Models.Customer>

@{
    ViewBag.Title = "Index";
}

@section Styles {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Ajax.BeginForm(
                new AjaxOptions
                {
                    HttpMethod = "get",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "customersList"
                }))
{
    <input type="search" name="searchTerm" data-customers-autocomplete="@Url.Action("Autocomplete")" />
    <input type="submit" value="Search by name" />
}


@Html.Partial("_CustomersList", Model)