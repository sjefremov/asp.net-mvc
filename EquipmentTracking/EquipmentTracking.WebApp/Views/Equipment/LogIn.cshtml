
@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>
@if (IsDisabled())
{
    <span style="color: red">Login is temporarily disabled. Please try after 30 minutes.</span>
}
else if ((int)@Session["invalidTries"] > 0)
{
    <span style="color: red">Invalid username or password. (Number of tries: @Session["invalidTries"])</span>
}

<form action="~/equipment/login" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
            <input type="text" name="username" class="form-control" disabled="@IsDisabled()">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="password" disabled="@IsDisabled()">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" disabled="@IsDisabled()">Log in</button>
        </div>
    </div>
</form>

@functions {

    public bool IsDisabled()
    {
        var invalidTries = Session["invalidTries"];
        return invalidTries == null ? false : (int)invalidTries > 5;
    }

}

